<script src="~/site.js"></script>

@model ChatboxApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        background-color: #A7D7C5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .d-flex {
        height: 100%;
    }

    .card {
        width: 400px;
        max-height: 90vh;
        overflow-y: auto;
        border-radius: 20px;
        background-color: #ffffff;
        box-shadow: 4 4px 20px rgba(0, 0, 0, 0.15);
        border: 4px solidrgb(13, 14, 13);
        transition: all 0.3s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.25);
        transform: translateY(-3px);
    }

    .form-group label {
        font-weight: 600;
        color: #374151;
    }

    .form-control {
        border-radius: 50px;
        padding: 10px 15px;
        border: 1px solid #ccc;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #059b64;
        box-shadow: 0 0 0 0.2rem rgba(5, 155, 100, 0.25);
    }

    .btn {
        background-color: rgb(5, 155, 100);
        border: none;
        color: #ffffff;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn:hover {
        background-color: rgb(4, 135, 90);
    }

    .text-center a {
        color:rgb(7, 177, 114);
        text-decoration: none;
        font-weight: 500;
    }

    .text-center a:hover {
        text-decoration: underline;
    }

    body {
        overflow: hidden;
    }
</style>

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4" style="color: #374151;">Welcome Back</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label>Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 rounded-pill">Login</button>

            <div class="text-center mt-3">
                <small>Don't have an account? <a href="/Account/Register">Register</a></small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
